<div class="container">

    <h1 class="text-center">Create new account</h1>
    <div class="row mt-5" style="margin-left: 10%; margin-right:10%;">
        <form class="col-xl-12 text-left font-weight-bold" action="/signup" method="post">
             <div class="Name">
                <label for="fname">First Name</label>
                <input type="text" class="" id="fname" name="fname">
                <span class="float-right">
                 <label for="lname">Last Name</label>
                <input type="text" id="lname" name="lname">
                </span>
            </div>
            <div class="mt-4">
                <label for="Email">Email address</label>
                <input type="email" name="email" class="form-control" id="Email" aria-describedby="emailHelp">
            </div>
            <div class="mt-4">
                <label for="Password">Password</label>
                <input type="password" class="form-control" id="Password" name="password">
            </div>
            <div>
                <a href="/signup" for="signup" >Already have account</a>
                <button type="submit" class="btn btn-primary float-right">Sign Up</button>
            </div>
        </form>

    </div>
</div>