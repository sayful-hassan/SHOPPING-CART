<div class="container">

    <h1 class="text-center">Create new account</h1>
    <div class="row mt-5" style="margin-left: 10%; margin-right:10%;">
        <form class="col-xl-12 text-left font-weight-bold" action="/signup" method="post">
             <div class="Name">
                <label for="fname">First Name</label>
                <input type="text" class="" id="fname">
                <span class="float-right">
                 <label for="lname">Last Name</label>
                <input type="text" id="lname">
                </span>
            </div>
            <div class="mt-4">
                <label for="Email1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1">
            </div>
            <div>
                <a href="/signup" for="signup" >Already have account</a>
                <button type="submit" class="btn btn-primary float-right">Sign Up</button>
            </div>
        </form>

    </div>
</div>