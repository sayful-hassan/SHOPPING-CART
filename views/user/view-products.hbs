
  <section>
    <div class="container mt-4">
      <div class="row">
        {{#each product}}
        <div class="col-sm-4 col-md-3 p-3">
          <div class="card" style="width: 16rem; height: 27rem">
            <img
              src="/product-images/{{this._id}}.jpg"
              class="card-img-top" alt="products"
              style="height: 15rem;">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
              <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a>
            </div>
          </div>

        </div>
        {{/each}}
                

      </div>
    </div>
  </section>


